<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hci_g8.restaurantfinder" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".NewGroup" />
        <activity android:name=".SavedGroups" />
        <activity android:name=".EditProfile" />
        <activity android:name=".Results" />
        <activity android:name=".Result1" />
        <activity android:name=".Result2" />
        <activity android:name=".Result3" />
        <activity android:name=".Result4" />

        <activity
            android:name=".Splashscreen"
            android:label="@string/title_activity_splashscreen"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hci_g8.restaurantfinder.MainActivity"/>

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
